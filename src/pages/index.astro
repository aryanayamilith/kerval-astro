<script>
  
document.addEventListener("DOMContentLoaded", () => {
  const valores = document.querySelectorAll(".valor-card");

  valores.forEach(card => {
    const header = card.querySelector(".valor-header");
    if (!header) return; // üëà protecci√≥n contra null

    header.addEventListener("click", () => {
      // Ver si todas est√°n abiertas
      const isActive = Array.from(valores).every(c => c.classList.contains("active"));

      if (isActive) {
        // Si todas estaban abiertas -> se cierran todas
        valores.forEach(c => {
          c.classList.remove("active");
          const i = c.querySelector(".icon");
          if (i) i.textContent = "+"; // vuelve al +
        });
      } else {
        // Si no, se abren todas
        valores.forEach(c => {
          c.classList.add("active");
          const i = c.querySelector(".icon");
          if (i) i.textContent = "‚àí"; // cambia a ‚àí
        });
      }
    });
  });
});
</script>


