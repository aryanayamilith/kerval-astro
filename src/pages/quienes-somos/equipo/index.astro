  <!-- Estilos propios (sin tocar el banner global) -->
  <style>
    .intro {
      text-align: center;
      font-size: 1.2rem;
      max-width: 900px;
      margin: 2rem auto;
      padding: 0 1rem;
    }

    .equipo {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 2rem;
      max-width: 1100px;
      margin: 3rem auto;
      padding: 0 1rem;
    }

    .card {
      text-align: center;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
      transform: translateY(-8px);
      box-shadow: 0 8px 18px rgba(0, 0, 0, 0.15);
    }

    .card a {
      text-decoration: none;
    }

    .card img {
      width: 180px;
      height: 180px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 0;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card img:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
    }

    .nombre {
      font-weight: bold;
      color: #c00000;
      margin-bottom: 0.3rem;
      transition: color 0.3s ease;
      font-size: 1.2rem;
    }

    .card a:hover .nombre {
      color: #002060;
    }

    .cargo {
      font-weight: bold;
      color: #002060;
      margin-bottom: 0.2rem;
    }

    .area {
      color: #002060;
      margin: 0;
    }

    .valores {
      background-color: #f2f2f2;
      padding: 4rem 4rem;
      text-align: center;
    }

    .valores-container {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 12rem;
      flex-wrap: wrap;
      max-width: 1000px;
      margin: 0 auto;
    }

    .valor-card {
      display: flex;
      flex-direction: column;
      align-items: center;
      transition: transform 0.3s ease;
    }

    .valor-card:hover {
      transform: scale(1.1);
    }

    .valor-card img {
      width: 70px;
      height: 70px;
      margin-bottom: 1rem;
    }

    .valor-card p {
      font-weight: bold;
      color: #002060;
      font-size: 1.2rem;
      margin: 0;
    }

    /* === MOBILE (solo cambios aquí para valores) === */
    @media (max-width: 768px) {
      .valores {
        padding: 3rem 1.5rem;
      }

      .valores-container {
        flex-direction: column;
        gap: 2.5rem;
      }

      .valor-card img {
        width: 60px;
        height: 60px;
        margin-bottom: 0.5rem;
      }

      .valor-card p {
        font-size: 1rem;
      }
    }
  </style>

