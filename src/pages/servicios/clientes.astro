  <!-- Script Carrusel -->
  <script>
  // @ts-nocheck
  document.addEventListener("DOMContentLoaded", () => {
    const carousels = document.querySelectorAll("[data-carousel]");

    carousels.forEach((wrapper) => {
      const pages = wrapper.querySelectorAll(".clientes-logos-page");
      const btnRight = wrapper.querySelector(".arrow-right");
      const btnLeft  = wrapper.querySelector(".arrow-left");

      if (!btnRight || !btnLeft || pages.length === 0) return;

      let current = 0;

      const showPage = (i) => {
        pages.forEach((p, idx) => p.classList.toggle("active", idx === i));
      };

      showPage(current);

      btnRight.addEventListener("click", () => {
        current = (current + 1) % pages.length;
        showPage(current);
      });

      btnLeft.addEventListener("click", () => {
        current = (current - 1 + pages.length) % pages.length;
        showPage(current);
      });
    });
  });
  </script>

