  <style>
    .banner {
      background: url('/images/banner-clientes.jpg') center/cover no-repeat;
      position: relative;
      padding: 6rem 2rem;
      text-align: center;
      color: #fff;
    }
    .banner::before {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0,32,96,0.7);
    }
    .banner > div { position: relative; z-index: 2; }
    .banner h1 { font-family: 'Calibri'; font-size: 3rem; margin-bottom: 1rem; }
    .banner p  { font-family: 'Calibri'; font-size: 1.5rem; }

    .clientes-section {
      display: flex;
      gap: 2rem;
      padding: 4rem 2rem;
      align-items: flex-start;
    }
    .clientes-section:nth-child(even) { background: #f9f9f9; }

    .clientes-info { flex: 1; text-align: center; }
    .clientes-info img { width: 60px; margin-bottom: 1rem; }
    .clientes-info h2 {
      color: #c00000; font-family: 'Calibri';
      font-weight: bold; font-size: 1.6rem;
    }

    .clientes-text 
    { 
        flex: 3; color: #002060; 
        font-family: 'Calibri'; 
    }

    /* Carrusel */
    .clientes-logos-wrapper { position: relative; margin-top: 5rem; }

    .clientes-logos-page {
      display: none;
      grid-template-columns: repeat(5, 1fr);
      gap: 1.5rem;
      align-items: center;
      justify-items: center;
    }
    .clientes-logos-page.active { display: grid; }

    .clientes-logos-page img {
      max-height: 70px;
      max-width: 150px;
      object-fit: contain;
    }

    /* Espaciadores invisibles para completar 5x3 */
    .logo-spacer {
      width: 150px;
      height: 70px;
      opacity: 0;
    }

    /* Flechas */
    .carousel-arrow {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  border: 0;
  background: transparent;
  cursor: pointer;
  padding: 0;
  z-index: 20;
  line-height: 0;
  transition: transform 0.25s ease, filter 0.25s ease; /* animación suave */
}

.carousel-arrow img {
  width: 44px;
  height: 44px;
  display: block;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, .25));
  transition: filter 0.25s ease, transform 0.2s ease;
}

.carousel-arrow.arrow-left {
  left: -40px;
}

.carousel-arrow.arrow-right {
  right: -40px;
}

/* Hover */
.carousel-arrow:hover img {
  filter: drop-shadow(0 3px 6px rgba(0, 0, 0, .35)) brightness(0.8);
  transform: scale(1.05);
}

/* Click (activo) */
.carousel-arrow:active img {
  filter: brightness(0.6) grayscale(40%);
  transform: scale(0.95);
}
  </style>

