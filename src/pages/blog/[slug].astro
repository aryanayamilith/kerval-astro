---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection, render, type CollectionEntry } from "astro:content";

// üü¶ Generamos rutas din√°micas
export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post: CollectionEntry<"blog">) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

// üü¶ Obtenemos el post actual
const { post } = Astro.props as { post: CollectionEntry<"blog"> };
const { Content } = await render(post);

// üü¶ Obtenemos todos los posts para art√≠culos relacionados
const allPosts = await getCollection("blog");
const related = allPosts
  .filter(
    (p) =>
      p.data.category === post.data.category &&
      p.slug !== post.slug // excluye el actual
  )
  .slice(0, 3); // solo 3 relacionados
---

<BaseLayout title={post.data.title} description={post.data.description}>
  <article class="post-detalle">
    {post.data.image && (
      <img 
        src={post.data.image} 
        alt={post.data.title} 
        class="imagen-principal"
        loading="eager"
        decoding="async"
      />
    )}

    {post.data.category && (
      <p class="categoria">{post.data.category}</p>
    )}

    <h1>{post.data.title}</h1>
    <p class="fecha">{post.data.date}</p>

    <div class="contenido">
      <Content />
    </div>
  </article>

  <!-- üü© Art√≠culos relacionados -->
  {related.length > 0 && (
    <section class="relacionados">
      <h2>Art√≠culos relacionados</h2>
      <div class="relacionados-grid">
        {related.map((item) => (
          <a href={`/blog/${item.slug}/`} class="relacionado-card">
            {item.data.image && (
              <img src={item.data.image} alt={item.data.title} />
            )}
            <div class="texto">
              <p class="cat">{item.data.category}</p>
              <h3>{item.data.title}</h3>
              {item.data.date && <p class="fecha">{item.data.date}</p>}
            </div>
          </a>
        ))}
      </div>
    </section>
  )}

  <style>
    /* ====== CONTENIDO PRINCIPAL ====== */
    .post-detalle {
      max-width: 900px;
      margin: 3rem auto;
      padding: 0 2rem;
      font-family: 'Calibri', sans-serif;
      color: #002060;
      line-height: 1.7;
    }

    .imagen-principal {
      width: 100%;
      height: auto;
      max-height: 280px;
      object-fit: cover;
      border-radius: 10px;
      margin-bottom: 1.5rem;
    }

    .categoria {
      color: #c00000 !important;
      font-weight: bold !important;
      margin-bottom: 0.5rem;
      text-transform: uppercase;
      font-size: 1rem;
      display: block;
    }

    .post-detalle h1 {
      font-size: 2.2rem;
      font-weight: bold;
      margin-bottom: 1rem;
    }

    .fecha {
      font-size: 1rem;
      color: #777;
      margin-bottom: 1.5rem;
    }

    .contenido p {
      margin-bottom: 1.2rem;
      font-size: 1.1rem;
    }

    /* ====== ART√çCULOS RELACIONADOS ====== */
    .relacionados {
      max-width: 1100px;
      margin: 4rem auto;
      padding: 0 2rem;
    }

    .relacionados h2 {
      color: #002060;
      font-family: 'Calibri';
      font-size: 1.8rem;
      font-weight: bold;
      margin-bottom: 1.5rem;
      text-align: center;
    }

    .relacionados-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 1.8rem;
    }

    .relacionado-card {
      background: #f2f2f2;
      border-radius: 10px;
      text-decoration: none;
      color: #002060;
      box-shadow: 0 2px 6px rgba(0,0,0,0.1);
      overflow: hidden;
      transition: transform 0.25s ease;
    }

    .relacionado-card:hover {
      transform: translateY(-4px);
    }

    .relacionado-card img {
      width: 100%;
      height: 160px;
      object-fit: cover;
    }

    .relacionado-card .texto {
      padding: 1rem;
    }

    .relacionado-card .cat {
      color: #c00000;
      font-weight: bold;
      margin-bottom: 0.4rem;
      text-transform: uppercase;
      font-size: 0.9rem;
    }

    .relacionado-card h3 {
      font-size: 1.1rem;
      margin-bottom: 0.3rem;
      line-height: 1.3;
    }

    .relacionado-card .fecha {
      font-size: 0.9rem;
      color: #666;
    }

    /* üì± MOBILE */
    @media (max-width: 768px) {
      .post-detalle {
        margin: 2rem auto;
        padding: 0 1.5rem;
      }

      .imagen-principal {
        max-height: 200px;
      }

      .post-detalle h1 {
        font-size: 1.6rem;
      }

      .relacionados {
        padding: 0 1.2rem;
        margin-top: 3rem;
      }

      .relacionados h2 {
        font-size: 1.4rem;
      }

      .relacionado-card img {
        height: 140px;
      }
    }
  </style>
</BaseLayout>
