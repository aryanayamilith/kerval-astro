---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import CookieBanner from "../components/CookieBanner.astro";
import "../styles/global.css";

const {
  title = "Asesoramiento Financiero en Espa침a | Kerval Advisory Partners",
  description = "Boutique de asesoramiento financiero en Espa침a especializada en M&A, financiaci칩n y estrategia corporativa.",
  ogImage = "/images/og-default.jpg"
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- SEO B치sico -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="asesoramiento financiero en Espa침a, M&A, corporate finance, valoraci칩n de empresas, boutique financiera, fusiones y adquisiciones, estrategia corporativa"
    />
    <meta name="author" content="Kerval Advisory Partners" />
    <link rel="canonical" href={Astro.url.href} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:site_name" content="Kerval Advisory Partners" />

    <!-- Twitter Cards -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Favicon y manifest -->
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />

    <!-- ================================ -->
    <!-- 游릱 PRELOAD PARA CALIBRI (Reduce FOUT) -->
    <!-- ================================ -->

    <link
      rel="preload"
      href="/fonts/calibri-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/calibri-bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/calibri-italic.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />

    <!-- Tipograf칤as secundarias -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Carlito:wght@400;700&display=swap"
      rel="stylesheet"
    />

    <!-- Estilos globales -->
    <link rel="stylesheet" href="/src/styles/global.css" />
    <!-- Google tag (gtag.js) + Consent Mode v2 -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-JDRJ17NR1K"></script>
<script is:inline>
  // @ts-nocheck
  window.dataLayer = window.dataLayer || [];
  function gtag(){ dataLayer.push(arguments); }

  // 1) Consentimiento por defecto (nadie ha elegido a칰n)
  gtag('consent', 'default', {
    'ad_storage': 'denied',
    'analytics_storage': 'denied',
    'ad_user_data': 'denied',
    'ad_personalization': 'denied'
  });

  // 2) Inicializar Google Analytics
  gtag('js', new Date());

  // 3) Configurar la propiedad GA4 (con IP anonimizada)
  gtag('config', 'G-JDRJ17NR1K', {
    'anonymize_ip': true
  });
</script>

  </head>

  <body>
    <!-- Header global -->
    <Header />

    <!-- Contenido din치mico -->
    <main>
      <slot />
    </main>

    <!-- Footer global -->
    <Footer />

    <!-- Cookie Banner global -->
    <CookieBanner />

    <slot name="consent-scripts" />
  </body>
</html>
