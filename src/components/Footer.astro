---
// Footer.astro
---

<footer class="footer">
  <div class="container">
    <!-- Logo -->
    <a href="/" class="logo-link">
      <img src="/images/logo2.svg" alt="Kerval Advisory Partners" class="logo" />
    </a>

    <!-- Navegación principal -->
    <nav class="nav">
      <a href="/" class="nav-link">Quiénes Somos</a>
      <a href="/servicios" class="nav-link">Nuestros Servicios</a>
      <a href="/transacciones" class="nav-link">Transacciones</a>
      <a href="/internacional" class="nav-link">Internacional</a>
      <a href="/blog" class="nav-link">Blog y Noticias</a>
      <a href="/contacto" class="nav-link">Contacto</a>
    </nav>

    <!-- Navegación legal -->
    <nav class="legal-nav">
      <a href="/aviso-legal" class="legal-link">Aviso Legal</a>
       <a href="/terminos-uso" class="legal-link">Términos de Uso</a>
      <a href="/privacidad" class="legal-link">Política de Privacidad</a>
      <a href="/proteccion-datos" class="legal-link">Protección de datos</a>
      <a href="/cookies" class="legal-link">Política de Cookies</a>

      <!-- Preferencias de cookies (abre el banner) -->
      <a
        href="#"
        class="legal-link cookie-link"
        role="button"
        aria-label="Abrir preferencias de cookies"
        onclick="window.kervalCookies?.open(this); return false;"
      >
        Preferencias de cookies
      </a>
    </nav>
  </div>

  <div class="copyright">
    <p>© 2025 Kerval Advisory Partners. Todos los derechos reservados.</p>
  </div>
</footer>

<style>
  .footer {
    background: #002060;
    color: #fff;
    padding: 3rem 1rem 2rem;
    font-family: 'Calibri', sans-serif;
    margin-top: 3rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
  }

  .logo {
    height: 100px;
    display: block;
  }

  /* ===== Navegación principal ===== */
  .nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 2rem 3rem;
  }

  .nav-link {
    color: #fff;
    text-decoration: none;
    font-size: 15px;
    font-weight: bold;
    transition: color 0.2s ease, text-decoration 0.2s ease;
  }

  .nav-link:hover {
    text-decoration: underline;
    color: #c00000;
  }

  /* ===== Navegación legal ===== */
  .legal-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem 2.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.25);
    padding-top: 1.25rem;
    margin-top: 0.5rem;
  }

  .legal-link {
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    opacity: 0.9;
    transition: color 0.2s ease, opacity 0.2s ease, background 0.2s ease;
    outline: none;
  }

  .legal-link:hover,
  .legal-link:focus {
    color: #c00000;
    text-decoration: underline;
    opacity: 1;
  }

  /* Un pelín más de affordance a "Preferencias de cookies" en desktop */
  .cookie-link {
    padding: 2px 6px;
    border-radius: 6px;
  }
  .cookie-link:focus-visible {
    outline: 2px solid #c00000;
    outline-offset: 2px;
    background: rgba(255,255,255,0.08);
  }

  /* ===== Derechos ===== */
  .copyright {
    margin-top: 2rem;
    text-align: center;
    font-size: 13px;
    opacity: 0.8;
    line-height: 1.5;
  }

  /* ===== Responsive ===== */
  @media (max-width: 768px) {
    .logo { height: 80px; }
    .container { gap: 2rem; }
    .nav { gap: 1rem 1.5rem; }
    .nav-link { font-size: 14px; }
    .legal-nav {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 0.75rem;
      border-top: 1px solid rgba(255, 255, 255, 0.25);
      padding-top: 1rem;
    }
    .legal-link { font-size: 13px; }
  }
</style>
