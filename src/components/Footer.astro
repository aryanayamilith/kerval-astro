---
 // Footer.astro
---

<footer class="footer">
  <div class="container">
    <!-- Logo -->
    <a href="/" class="logo-link">
      <img src="/images/logo2.svg" alt="Kerval Advisory Partners" class="logo" />
    </a>

    <!-- Navegación secundaria -->
    <nav class="nav">
      <a href="/" class="nav-link">Quiénes Somos</a>
      <a href="/servicios" class="nav-link">Nuestros Servicios</a>
      <a href="/transacciones" class="nav-link">Transacciones</a>
      <a href="/internacional" class="nav-link">Internacional</a>
      <a href="/blog" class="nav-link">Blog y Noticias</a>
      <a href="/contacto" class="nav-link">Contacto</a>
    </nav>
  </div>

  <div class="copyright">
    <p>© 2025 Kerval Advisory Partners. Todos los derechos reservados.</p>
  </div>
</footer>

<style>
  .footer {
    background: #002060;
    color: #fff;
    padding: 2rem 1rem 1rem;
    font-family: 'Calibri', sans-serif;
    margin-top: 3rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .logo {
    height: 100px;
    display: block;
    margin-bottom: 1rem;
  }

  .nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1.5rem;
  }

  .nav-link {
    color: #fff;
    text-decoration: none;
    font-size: 15px;
    font-weight: bold;
  }

  .nav-link:hover {
    text-decoration: underline;
    color: #c00000;
  }

  .copyright {
    margin-top: 1.5rem;
    text-align: center;
    font-size: 14px;
    opacity: 0.9;
  }
</style>


